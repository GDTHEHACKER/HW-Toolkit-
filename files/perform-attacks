# Function to nmap scanning
nmap_scan() {
     echo ""
     echo -e $RED ""
     read -p "Enter the target IP range : " ip_add
     echo -e $GRN ""
     nmap -sT $ip_add
}

brute_force() {
        echo ""
        echo -e $RED ""
        read -p "Enter the username : " username
        echo ""
        read -p "Enter the password list : " password_list
        echo ""
        read -p "Enter the target : " target
        echo -e $GRN ""
        hydra -l $username -P $password_list $target
        echo ""
}

sql_injection() {
          echo ""
          echo -e $RED ""
          read -p "Enter the target URL : " url
          echo -e $GRN ""
          sqlmap -u $url --dbs
}

web_vuln_scan() {
          echo ""
          echo -e $RED ""
          read -p "Enter the target URL : " url
          echo -e $GRN ""
          nikto -h $url
}

dir_brute_force() {
#         clear
          echo ""
          echo -e $YEL ""
          read -p "Enter the target URL : " url
          echo -e $YEL ""
          read -p "Enter Passwordlist path : " plist
          echo -e $RED ""
          dirb $url $plist
          echo ""
}


main_menu() {
          sleep 1s
          bash HW-Toolkit.sh
}

exit_tool() {
         sleep 1s
         echo -e $RED ""
         echo "                                 Existing..." | pv -qL 30
         sleep 1s
         echo -e $CYAN ""
         echo "                              Ok Bye Dear... ğŸ˜‡" | pv -qL 30
         sleep 1s
         exit 1 ; exit 0
echo ""

}

