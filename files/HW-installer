# Function to update and upgrade Termux packages

update_system() {
    echo -e $RED "Updating and upgrading Termux packages..."
    echo -e $GRN  ""
    pkg update && pkg upgrade -y ; apt update && apt upgrade -y
    echo -e $YEL "System update completed."
}

# Function to install Nmap
install_nmap() {
    echo -e $RED "Installing Nmap..."
    echo -e $GRN ""
    pkg install nmap -y ; apt install nmap -y
    echo -e $YEL ""
    echo "Nmap installed successfully."
}

# Function to install Metasploit
install_metasploit() {
    echo -e $RED "Installing Metasploit..."
    echo -e $GRN ""
    pkg install metasploit -y ; apt install metasploit -y
    echo -e $YEL "Metasploit installed successfully."
}

