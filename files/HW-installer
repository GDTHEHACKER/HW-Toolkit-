}

exit_tool() {
       sleep 1s
       echo ""
       echo -e $RED"                          𝚃𝚘𝚘𝚕 𝙴𝚡𝚒𝚝𝚒𝚗𝚐....."
       echo  ""
       echo -e $CYAN"                    💻 𝙾𝙺 𝙱𝚈𝙴 𝙳𝙴𝙰𝚁 𝚄𝚂𝙴𝚁....😊🤗" | pv -qL 35
       echo ""
       exit 0
}

# Main menu

