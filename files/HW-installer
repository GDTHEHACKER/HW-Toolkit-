echo -e $RED ""


# Get user input
while true; do
display_menu
echo -e $RED""
read -p "🔘 𝐄𝐧𝐭𝐞𝐫 𝐘𝐨𝐮𝐫 𝐂𝐡𝐨𝐢𝐜𝐞 : " choice


# Execute the chosen function
case $choice in

    1) update_system ;;
    2) install_nmap ;;
    3) install_metasploit ;;
    4) install_hydra ;;
    5) install_sqlmap ;;
    6) install_wireshark ;;
    7) install_aircrack_ng ;;
    8) install_nikto ;;
    9) install_john ;;
    10) install_dirb ;;
    11) install_gobuster ;;
    12) install_recon_ng ;;
    13) install_sslyze ;;
    14) install_frida ;;
    15) install_burp_suite ;;
    16) install_dirbuster ;;
    17) install_wfuzz ;;
    18) install_hashcat ;;
    19) install_crackmapexec ;;
    20) install_impacket ;;
    0)  main_menu ;;
    00) exit_tool ;;
    *) echo -e $MAGENTA "Invalid choice. Please try again." ;;
esac
    echo -e $CYAN ""
    read -p "𝐏ress 𝐄nter 𝐓o 𝐂ontinue..."
    clear
done

