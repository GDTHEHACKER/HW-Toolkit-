# Function to nmap scanning

nmap_scan() {
     echo ""
     echo ""
     echo ""
     echo "     ğŸŸ¡ Scan Ipv4 Open Port's "
     echo -e $CYAN ""
     read -p "     Enter the target IP range: " ip_add
     echo -e $PUL ""
     nmap -sT $ip_add
     echo ""
     echo ""
}


