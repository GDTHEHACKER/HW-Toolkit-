}


SF_Receiver() {

#            pkg install magic-wormhole-rs wormhole-rs -y
#           clear
#            apt install magic-wormhole-rs wormhole-rs -y
#           clear
      echo ""
      echo ""
      echo ""
echo -e $BLU ""
